<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ehu.androidspinner.MainActivity">

    <ImageView
        android:id="@+id/handSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/handspinner" />

    <Button
        android:id="@+id/stopSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="stopSpinner"
        android:text="止める" />

    <Button
        android:id="@+id/startSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="startSpinner"
        android:text="3・2・1ゴーシュート！" />
</LinearLayout>
